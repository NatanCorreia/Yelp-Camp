<% layout('layouts/boilerplate') %>
  <div class="row">
    <div class="col-6">
      <div class="card mb-3">
        <img class="card-img-top" src="<%= foundCamp.image  %>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">
            <%= foundCamp.title %>
          </h5>
          <p class="card-text">
            <%= foundCamp.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted">
            <%= foundCamp.location %>
          </li>
          <li class="list-group-item">
           Submitted by <%= foundCamp.author.username %>
          </li>
          <li class="list-group-item"> $<%=foundCamp.price %>/ night </li>

        </ul>
        <% if(foundCamp.author && currentUser && foundCamp.author.equals(currentUser._id)) {%> 
        <div class="card-body">
          <a href="/campgrounds/<%= foundCamp._id %>/edit " class="card-link btn btn-info">Edit Campground</a>
          <form class="d-inline" action="/campgrounds/<%=foundCamp._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete Campground</button>
          </form>
        </div>
        <% } %> 
        <div class="card-footer text-muted">
          2 days ago
        </div>
      </div>
    </div>
    <div class="col-6">
      <% if(currentUser) { %> 
      <h2>Leave a Review</h2>
      <form action="/campgrounds/<%=foundCamp._id%>/reviews " method="POST" class="mb-3 validate-form" novalidate>
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" class="form-range" name="review[rating]" id="rating" min="1" max="5">
        </div>
        <div class="mb-3">
          <label for="text" class="form-label"> Review</label>
          <textarea name="review[text]" id="text" cols="30" rows="3" class="form-control" required></textarea>
        </div>
        <button class="btn btn-success">Submit</button>

      </form>
      <% } if(currentUser) {%> 
      <% for (let review of foundCamp.reviews) { %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"> Rating: <%= review.rating %></h5>
            <h6 class="card-subtitle"><%= review.author.username  %> </h6>
            <p class="card-text">Review <%=review.text %></p>
            <% if(review.author.equals(currentUser._id)) { %> 
            <form action="/campgrounds/<%=foundCamp._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
            <% } }%> 
          </div>
        </div>
        <% } %>
    </div>

  </div>